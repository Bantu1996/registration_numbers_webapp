<div class="row">
    <h1>Registration numbers</h1>

    <div class="notification">

    </div>
    <div class="entry">
        <h1> {{messages.error}}</h1>
         </div>
         <div class="rstMessage">
         <h1> {{messages.info}}</h1>
        
    </div>
    <div class="sis">
        {{message.regError}}
    </div>

    <form action="/registering" method="POST">

        <div>
            <label>
            <input type="text" class="texting" name="texting" value="" placeholder="enter a registration number">
            </label>
            <button type="submit" class="regButton">Add Reg</button>
        </div>
    </form>
    <form action="/filter" method="POST">
        <strong>Filter:</strong>
        <input class="towns" name="placesFilter" type="radio" value="All">Show All
        <input class="towns" name="placesFilter" type="radio" value="CY">Bellville
        <input class="towns" name="placesFilter" type="radio" value="CJ">Paarl
        <input class="towns" name="placesFilter" type="radio" value="CA">Cape Town
        <button type="submit" class="filBtn">Filter</button>
    </form>

    <a href="/reset"><button class="resetBtn" on type="button" name="button">Clear List</button></a>
    <br>
    <br>
    <hr>


    {{#each reg}}
    <div class="regNumbersList">
        <li>
            {{this.reg_num}}
        </li>
    </div>
    {{/each}}

</div>